<?xml version="1.0" encoding="UTF-8"?>
<lint>
    <!-- 경로별 제외 설정 -->
    <issue id="UnusedResources">
        <ignore path="**/build/**" />
    </issue>

    <issue id="ExtraText">
        <ignore path="**/values/**" />
    </issue>

    <issue id="ContentDescription">
        <ignore path="**/drawable/**" />
    </issue>

    <issue id="HardcodedText">
        <ignore path="**/debug/**" />
    </issue>

    <!-- 임계값 설정 -->
    <issue id="TooManyViews">
        <option name="max" value="80" />
    </issue>

    <issue id="TooDeepLayout">
        <option name="max" value="10" />
    </issue>
</lint>
